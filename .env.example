# Copy this to .env and adjust as needed.
PORT=8010
APP_NAME="Diet App"
APP_VERSION=0.2.0
LOG_LEVEL=INFO
CORS_ORIGINS=*

# Postgres is required
DATABASE_URL=postgresql+psycopg://dietapp:REPLACE_ME@127.0.0.1:5432/dietapp

# Sessions
# Generate a strong value and place it in .env (do NOT commit real secrets)
# openssl rand -base64 32 | tr '+/' '-_'
SECRET_KEY=REPLACE_ME
ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_ALGORITHM=HS256

# CORS
# Comma-separated list of allowed browser origins.
# Example for this host:
# CORS_ORIGINS=http://127.0.0.1:8080,http://localhost:8080

# LLM (enabled by default; uses fallback if no key)
LLM_ENABLED=1
# Set your OpenAI API key to enable PhD Coach plans
OPENAI_API_KEY=
